@{
    ViewData["Title"] = "Додавання нової Гри";
}
@model GameRepository
<h3> Додати гру.</h3>
@if (Model != null)
{
    <div class="alert alert-success" role="alert">@Model</div>
}
    <form method="post" asp-controller="GameController" asp-action="AddGame">
